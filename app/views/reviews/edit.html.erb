<%= link_to "Back to bottle", bottle_path(@bottle) %><br/>

<h2>Update Review<em><%= @bottle.name %></em>.</h2>

<%= form_for([@bottle, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div>
      <%= pluralize(@review.errors.count, "error") %> prevented the review from being saved:
      <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label "my_rating" %><br>
    <%= f.number_field "my_rating"%>
  </div>
  <div>
    <%= f.label "comment" %><br>
    <%= f.text_area "comment" %>
  </div>
  <div>
    <%= f.label "favorite" %><br>
    <%= f.check_box "favorite" %>
  </div>
  <div><%= f.submit "Submit" %></div>
<% end %>