<h3>Favorite bottles</h3>
<% if @user.reviews.where(favorite: true).any? %>
  <% @user.reviews.where(favorite: true).each do |review| %>
    <%= link_to Bottle.find(review.bottle_id).name, bottle_path(review.bottle_id) %><br/>
  <% end %>
<% else %>
  <p>User has not favorited any bottles</p>
<% end %>

<h3>Ranked 5 Stars</h3>
<% if @user.reviews.where(my_rating: 5).any? %>
  <% @user.reviews.where(my_rating: 5).each do |review| %>
    <%= link_to Bottle.find(review.bottle_id).name, bottle_path(review.bottle_id)  %><br/>
  <% end %>
<% else %>
  <p> User has no bottles ranked at 5</p>
<% end %>

