<div class="show login">

 <h2>Log In</h2>
    <%= form_tag sessions_path do %>
      <div>
        <%= label_tag "email" %><br/>
        <%= text_field_tag "email" %>
      </div>
      <div>
        <%= label_tag :password %><br/>
        <%= password_field_tag :password %>
      </div>
      <div><%= submit_tag "Log In" %></div>
    <% end %>

</div>